{
  "manifest_version": 3,
  "name": "Show a Random Trello Card",
  "version": "1.3",
  "description": "Displays a random card from a specified Trello board in new tabs",
  "permissions": [
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "${chrome.runtime.id}",
    "scopes": ["https://api.trello.com/"]
  },
  "host_permissions": [
    "https://api.trello.com/*",
    "https://trello.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Show a Random Trello Card"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}