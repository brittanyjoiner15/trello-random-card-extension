{
  "manifest_version": 3,
  "name": "Show a Random Trello Card",
  "version": "1.1",
  "description": "Displays a random card from a specified Trello board in new tabs",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.trello.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
